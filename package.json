{
  "name": "termux-server-suite",
  "version": "0.1.0",
  "description": "A complete server solution built with Termux on Android",
  "main": "index.js",
  "scripts": {
    "start:sshd": "node termux-server-suite/system/start-sshd.js",
    "start:web": "node termux-server-suite/system/start-web.js",
    "start:health-check": "node termux-server-suite/system/health-check.js",
    "start:service-monitor": "node termux-server-suite/system/service-monitor.js",
    "start:wakelock": "node termux-server-suite/system/wakelock-manager.js",
    "start:all": "pm2 start pm2.config.js",
    "stop:all": "pm2 stop pm2.config.js",
    "status": "pm2 status",
    "logs": "pm2 logs",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage"
  },
  "keywords": [
    "termux",
    "android",
    "server",
    "ssh",
    "web-server"
  ],
  "author": "Termux Developer",
  "license": "MIT",
  "dependencies": {
    "pm2": "^5.3.0"
  },
  "devDependencies": {
    "jest": "^29.0.0",
    "jest-mock-process": "^2.0.0"
  },
  "engines": {
    "node": ">=14.0.0"
  },
  "jest": {
    "testEnvironment": "node",
    "collectCoverageFrom": [
      "termux-server-suite/system/**/*.js",
      "termux-server-suite/config/**/*.js",
      "!termux-server-suite/system/enhanced-health-check.js"
    ],
    "testMatch": [
      "**/tests/**/*.test.js"
    ],
    "coverageDirectory": "coverage"
  }
}