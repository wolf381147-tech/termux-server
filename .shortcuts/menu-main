# å¤„ç†SSHèœå•é€‰é¡¹
handle_ssh_menu() {
    while true; do
        show_ssh_menu
        read -p "è¯·é€‰æ‹©: " ssh_choice
        
        case $ssh_choice in
            1)
                echo -e "${BLUE}åˆ‡æ¢SSHæœåŠ¡çŠ¶æ€...${NC}"
                ~/.shortcuts/service-ssh toggle
                read -p "æŒ‰å›è½¦é”®ç»§ç»­..."
