                read -p "æŒ‰å›è½¦é”®ç»§ç»­..."
                ;;
            3)
                echo -e "${BLUE}æ£€æŸ¥SSHæœåŠ¡çŠ¶æ€...${NC}"
                ~/.shortcuts/service-ssh status
                echo -e "${BLUE}æ˜¾ç¤ºSSHè¿æ¥ä¿¡æ¯...${NC}"
                ~/.shortcuts/service-ssh info --with-guide
                read -p "æŒ‰å›è½¦é”®ç»§ç»­..."
