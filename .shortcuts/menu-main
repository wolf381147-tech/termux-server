# ä¸»ç¨‹åºå¾ªç¯
main() {
    while true; do
        show_main_menu
        read -p "è¯·é€‰æ‹©: " main_choice
        
        case $main_choice in
            1)
                # æ–°å¢çš„æœåŠ¡å™¨ç›‘æ§é¢æ¿
                ~/.shortcuts/server-monitor
                ;;
            2)
                handle_ssh_menu
                ;;
            3)
                handle_web_menu
                ;;
            4)
                handle_backup_menu
                ;;
            5)
                echo -e "${YELLOW}æ˜¾ç¤ºç³»ç»ŸçŠ¶æ€...${NC}"
                if command -v neofetch >/dev/null 2>&1; then
                    neofetch
                else
                    echo "ç³»ç»Ÿä¿¡æ¯:"
                    uname -a
                    echo "ç”¨æˆ·: $(whoami)"
                    echo "å½“å‰ç›®å½•: $(pwd)"
                fi
                read -p "æŒ‰å›è½¦é”®ç»§ç»­..."
                ;;
            6)
                echo -e "${GREEN}æ„Ÿè°¢ä½¿ç”¨ Termux æœåŠ¡å™¨é¡¹ç›®ï¼${NC}"
                exit 0
                ;;
            *)
                echo -e "${RED}æ— æ•ˆé€‰æ‹©ï¼Œè¯·é‡æ–°è¾“å…¥${NC}"
                sleep 1
                ;;
        esac
    done
}

